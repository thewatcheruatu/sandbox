{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		// Possible Errors
		"no-console" : [
			"warn"
		],
		// Best Practices
		"curly" : [
			"error",
			"all"
		],
		"no-warning-comments" : [
			"warn"
		],
		"vars-on-top" : [
			"error"
		],
		// Strict Mode
		"strict" : [
			"error",
			"global"
		],
		// Variables
		"no-unused-vars" : [
			"warn"
		],
		// Stylistic Issues
		"brace-style" : [
			"error"
		],
		"camelcase" : [
			"error"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
				"error",
				"unix"
		],
		"no-mixed-spaces-and-tabs" : [
			"error",
			"smart-tabs"
		],
		"quotes": [
				"error",
				"single"
		],
		"semi": [
				"error",
				"always"
		],
		"space-in-parens" : [
			"error",
			"always"
		],
		// ECMASCRIPT6
		"no-var" : [
			"warn"
		]
	}
}
